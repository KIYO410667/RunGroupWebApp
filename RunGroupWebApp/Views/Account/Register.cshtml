@using RunGroupWebApp.Data.Enum
@using RunGroupWebApp.Helpers
@using RunGroupWebApp.ViewModels
@model RegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <form method="post" class="form-signin" asp-action="Register">
                <h1 class="h3 mb-3 font-weight-normal text-center">註冊</h1>
               @*  <div asp-validation-summary="All" class="text-danger"></div> *@
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Email">電子信箱</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required autofocus>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">密碼</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ConfirmPassword">確認密碼</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                @* <p>@error.ErrorMessage</p>
                                @if (error.ErrorMessage == "Passwords must be at least 6 characters.")
                                {
                                    <p>你好</p>
                                } *@
                                <p>@ErrorMessageTranslator.GetPasswordErrorMessages(@error.ErrorMessage);</p>
                            }
                        </ul>
                    </div>
                }
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>